public class Manager {
    private String name;
    private String email;
    private String phoneNumber;

    public Manager(String name, String email, String phoneNumber) {
        this.name = name;
        this.email = email;
        this.phoneNumber = phoneNumber;
    }

    public void validateName(String name){
        if (name.indexOf(" ") >= 0)
            throw new IllegalArgumentException("Enter your full name!");
    }

    public void validateEmail(String email){
        if (email.indexOf("@") >= 0)
            throw new IllegalArgumentException("The e-mail address must contain the @ sign!");
    }

    public void validatePhoneNumber(String phoneNumber){
        if (phoneNumber.length() <> 11) {
            throw new IllegalArgumentException("The Phone Number must be 11 characters!");
        }
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        validateName(name);
        this.name = name;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        validateEmail(email);
        this.email = email;
    }

    public String getPhoneNumber() {
        return numberPhone;
    }

    public void setPhoneNumber(String phoneNumber) {
        validatePhoneNumber(phoneNumber);
        this.phoneNumber = phoneNumber;
    }

}